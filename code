int main()
{
	c.operator + ();
	Sleep(10000);
	cout<<endl; 
	cout<<"Waiting Time is Over you can Order Now  "<<endl;          // Operator Overloading
	srand(time(0));
	c.name(rand());      // Function Overloading  Calling
	c.name();
	cout<<endl;
	c.display();
	c.days();
	c.menu();

}
